<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/flag_gradient"
    android:gravity="center"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_124sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="@dimen/_200sdp"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:fontFamily="cursive"
                        android:gravity="center"
                        android:src="@drawable/logob"
                        android:text="Login Page"
                        android:textColor="#FB9411"
                        android:textSize="@dimen/_35sdp"
                        android:textStyle="bold" />
                </LinearLayout>
            </LinearLayout>
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/_8sdp"
                android:layout_margin="@dimen/_5sdp"
                app:cardBackgroundColor="#97DAD8D8"
                android:elevation="@dimen/_10sdp">

            <LinearLayout
                android:id="@+id/llmain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:orientation="vertical">

                    <ImageView
                        android:background="@drawable/edit_border"
                        android:id="@+id/images"
                        android:layout_height="@dimen/_80sdp"
                        android:layout_width="@dimen/_100sdp"
                       android:src="@drawable/ic_manq" />

                    <Button
                        android:id="@+id/uploads"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="#DA0303"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:text="@string/uploadphoto"/>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="#A6A4A4"/>

                <LinearLayout
                    android:layout_margin="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                            style="@style/general_lable_style"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="@string/name"
                            android:textSize="@dimen/_12sdp"
                            app:font_name="NunitoBold.ttf"
                            android:paddingLeft="@dimen/_3sdp" />

                        <com.mrf.mrfmaharashtra.customecomponent.CustomEdittext
                            android:id="@+id/etName"
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:drawablePadding="@dimen/_5sdp"
                            style="@style/general_edittext_style"
                            android:hint="@string/entername"
                            android:inputType="text"
                            android:textColor="@color/myblack"
                            android:textSize="@dimen/_14sdp"
                            app:font_name="NunitoLight.ttf" />

                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                    <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                        style="@style/general_lable_style"
                        android:paddingStart="@dimen/_3sdp"
                        android:textSize="@dimen/_12sdp"
                        android:text="@string/email"
                        app:font_name="NunitoBold.ttf"
                        android:paddingLeft="@dimen/_3sdp" />


                    <com.mrf.mrfmaharashtra.customecomponent.CustomEdittext
                        android:id="@+id/etEmail"
                        android:drawableLeft="@drawable/ic_baseline_email_24"
                        android:drawablePadding="@dimen/_5sdp"
                        style="@style/general_edittext_style"
                        android:hint="@string/entermail"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="@color/myblack"
                        android:inputType="textEmailAddress"
                        app:font_name="NunitoLight.ttf" />
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                            style="@style/general_lable_style"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="@string/contactno"
                            app:font_name="NunitoBold.ttf"
                            android:textSize="@dimen/_12sdp"
                            android:paddingLeft="@dimen/_3sdp" />

                        <com.mrf.mrfmaharashtra.customecomponent.CustomEdittext
                            style="@style/general_edittext_style"
                            android:hint="@string/entercontact"
                            android:drawableLeft="@drawable/ic_baseline_contact_phone_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:id="@+id/etContact"
                            android:textColor="@color/myblack"
                            android:inputType="phone"
                            android:maxLength="10"
                            app:font_name="NunitoLight.ttf"
                            android:textSize="@dimen/_14sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                            style="@style/general_lable_style"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="@string/photo"
                            app:font_name="NunitoBold.ttf"
                            android:textSize="@dimen/_12sdp"
                            android:paddingLeft="@dimen/_3sdp" />

                        <com.mrf.mrfmaharashtra.customecomponent.CustomButton
                            android:id="@+id/uploadPhoto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawableLeft="@drawable/ic_baseline_add_photo_alternate_24"
                            android:text="@string/uploadphoto"
                            android:textAllCaps="false"
                            android:gravity="right"
                            android:singleLine="true"
                            android:drawablePadding="@dimen/_5sdp"
                            android:drawableRight="@drawable/ic_baseline_cloud_upload_24"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                            style="@style/general_lable_style"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="@string/address"
                            app:font_name="NunitoBold.ttf"
                            android:textSize="@dimen/_12sdp"
                            android:paddingLeft="@dimen/_3sdp" />

                        <com.mrf.mrfmaharashtra.customecomponent.CustomEdittext
                            android:id="@+id/etAddress"
                            style="@style/general_edittext_style"
                            android:hint="@string/enteraddress"
                            android:drawableLeft="@drawable/ic_baseline_note_add_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/myblack"
                            android:inputType="text"
                            app:font_name="NunitoLight.ttf"
                            android:textSize="@dimen/_14sdp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                            style="@style/general_lable_style"
                            android:paddingStart="@dimen/_3sdp"
                            android:text="@string/passwords"
                            app:font_name="NunitoBold.ttf"
                            android:textSize="@dimen/_12sdp"
                            android:paddingLeft="@dimen/_3sdp" />

                        <com.mrf.mrfmaharashtra.customecomponent.CustomEdittext
                            android:id="@+id/etPassword"
                            style="@style/general_edittext_style"
                            android:hint="@string/enter_password"
                            android:drawableLeft="@drawable/ic_baseline_lock_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textColor="@color/myblack"
                            android:inputType="textPassword"
                            app:font_name="NunitoLight.ttf"
                            android:textSize="@dimen/_14sdp"/>
                    </LinearLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <CheckBox
                        android:buttonTint="@color/black"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:id="@+id/checkbox"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_alignParentLeft="true"
                        android:theme="@style/MyCheckBox"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        />


                    <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                        android:gravity="center_vertical"
                        style="@style/general_edittext_style"
                        app:font_name="NunitoRegular.ttf"
                        android:textColor="@color/black_trans"
                        android:textColorLink="@color/blue_700"
                        android:text="@string/terms"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBaseline="@+id/checkbox"
                        android:layout_alignBottom="@+id/checkbox"
                        android:layout_toRightOf="@+id/checkbox"
                        android:layout_toEndOf="@+id/checkbox" />

                </RelativeLayout>


                <com.mrf.mrfmaharashtra.customecomponent.CustomButton
                    android:id="@+id/tvRegisterButton"
                    android:layout_width="match_parent"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_height="@dimen/_32sdp"
                    android:layout_below="@+id/tvForgotPassword"
                    android:layout_marginLeft="@dimen/_50sdp"
                    android:layout_marginTop="@dimen/_18sdp"
                    android:layout_marginRight="@dimen/_50sdp"
                    android:background="@drawable/capsulebutton"
                    android:gravity="center"
                    android:text="@string/signup"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:layout_below="@+id/tvLoginButton"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:gravity="center">

                    <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                        android:id="@+id/tvDontHaveAccount"
                        style="@style/general_edittext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:text="@string/alreadyhaveacc"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_14sdp"
                        app:font_name="NunitoRegular.ttf" />

                    <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                        android:id="@+id/tvSigninbtn"
                        style="@style/general_edittext_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@+id/tvDontHaveAccount"
                        android:text="@string/signin"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="#0387EF"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        app:font_name="NunitoBold.ttf" />
                </RelativeLayout>

            </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_24sdp"
                android:layout_marginLeft="@dimen/_25sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:layout_marginRight="@dimen/_25sdp"
                android:orientation="horizontal"
                android:visibility="gone"
                android:weightSum="3">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black_trans" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <com.mrf.mrfmaharashtra.customecomponent.CustomTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:text="or connect with"
                        android:textColor="@color/black_trans"
                        android:textSize="@dimen/_12sdp"
                        app:font_name="NunitoRegular.ttf" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/black_trans" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:orientation="horizontal">


                <com.mrf.mrfmaharashtra.customecomponent.CustomTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:layout_marginEnd="@dimen/_8sdp"
                    android:layout_marginRight="@dimen/_8sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_6sdp"
                    android:text="Facebook"
                    android:visibility="gone"
                    app:font_name="NunitoExtraBold.ttf" />


                <com.mrf.mrfmaharashtra.customecomponent.CustomTextView

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/_8sdp"
                    android:layout_marginLeft="@dimen/_8sdp"
                    android:layout_marginEnd="@dimen/_5sdp"
                    android:layout_marginRight="@dimen/_5sdp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:padding="@dimen/_6sdp"
                    android:text="Google"
                    android:visibility="gone"
                    app:font_name="NunitoExtraBold.ttf" />


            </LinearLayout>



        </LinearLayout>
    </ScrollView>
</LinearLayout>