<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="10">
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#7C5EDFF1"
                    android:orientation="vertical">
                    <ImageView
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_width="@dimen/_140sdp"
                        android:id="@+id/profile_photo"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_man_profile"
                        android:layout_height="@dimen/_120sdp" />
                    <TextView
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/Tvname"
                        android:layout_width="wrap_content"
                        android:textSize="@dimen/_16sdp"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textStyle="bold"
                        android:text="@string/name"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textColor="#000000"
                        android:layout_margin="@dimen/_5sdp"
                        android:layout_height="wrap_content"/>

                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.3dp"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:background="#afafaf"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_height="match_parent">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="@string/mobile"
                            android:drawableLeft="@drawable/ic_baseline_call_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/number"
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#000"

                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="#afafaf"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="@string/email"
                            android:drawableLeft="@drawable/ic_baseline_email_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvMail"
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#000"

                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="#afafaf"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="@string/dob"
                            android:drawableLeft="@drawable/ic_baseline_date_range_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/dob"
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#000"

                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="#afafaf"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="@string/gender"
                            android:drawableLeft="@drawable/ic_baseline_group_add_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvGender"
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#000"

                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="#afafaf"/>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="match_parent">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_margin="@dimen/_5sdp"
                        android:text="@string/fathername"
                        android:drawableLeft="@drawable/ic_baseline_person_24"
                        android:drawablePadding="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:id="@+id/tvFather_name"
                        android:layout_width="match_parent"
                        android:layout_margin="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp"
                        android:textColor="#000"

                        android:drawablePadding="@dimen/_5sdp"
                        android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="#afafaf"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="@string/mothername"
                            android:drawableLeft="@drawable/ic_baseline_person_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvMother_name"
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#000"

                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="#afafaf"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="match_parent">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_margin="@dimen/_5sdp"
                            android:text="@string/registerno"
                            android:drawableLeft="@drawable/ic_baseline_format_list_numbered_24"
                            android:drawablePadding="@dimen/_5sdp"
                            android:textSize="@dimen/_12sdp"
                            android:layout_height="wrap_content"/>
                        <TextView
                            android:id="@+id/tvRegNo"
                            android:layout_width="match_parent"
                            android:layout_margin="@dimen/_5sdp"
                            android:textSize="@dimen/_14sdp"
                            android:textColor="#000"

                            android:drawablePadding="@dimen/_5sdp"
                            android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="0.3dp"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:background="#afafaf"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_height="match_parent">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="@dimen/_5sdp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:drawablePadding="@dimen/_5sdp"
                            android:text="@string/address"
                            android:textSize="@dimen/_14sdp" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:gravity="center"
                            android:layout_marginLeft="@dimen/_8sdp"
                            android:layout_marginRight="@dimen/_8sdp"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/tvAddress"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvTaluka"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvDistrict"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:layout_height="wrap_content"/>
                            <TextView
                                android:id="@+id/tvPincode"
                                android:layout_width="wrap_content"
                                android:textSize="@dimen/_12sdp"
                                android:layout_height="wrap_content"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
                <RelativeLayout
                    android:visibility="gone"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_width="match_parent"
                    android:layout_margin="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:layout_height="@dimen/_40sdp">

                    <TextView
                        android:background="@drawable/button_border"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:layout_centerInParent="true"
                        android:text="@string/change_profile"
                        android:id="@+id/tvChange"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_14sdp" />

                </RelativeLayout>

            </LinearLayout>


        </ScrollView>

    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:layout_width="match_parent"
        android:background="#ffffff"
        android:orientation="vertical"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/no_data"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:gravity="center"
                android:textSize="@dimen/_20sdp"
                android:text="@string/pleaseapplyfirst"/>

        </LinearLayout>


    </LinearLayout>


</LinearLayout>