    <LinearLayout
        android:id="@+id/courtesy"
        android:layout_width="match_parent"
        android:layout_alignParentBottom="true"
        android:background="#D7B3B1B1"
        android:layout_height="@dimen/_30sdp">

        <TextView
            android:text="Courtesy-Delhi Civil Defence          Courtesy-Delhi Civil Defence            Courtesy-Delhi Civil Defence            Courtesy-Delhi Civil Defence       Courtesy-Delhi Civil Defence             Courtesy-Delhi Civil Defence"
            android:id="@+id/MarqueeText"
            android:layout_gravity="center"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:textColor="#E80303"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold"
            android:marqueeRepeatLimit="marquee_forever"
            android:scrollHorizontally="true"
            android:paddingLeft="15dip"
            android:paddingRight="15dip"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:freezesText="true"/>

    </LinearLayout>


